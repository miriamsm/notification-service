{
  "name": "notification-service",
  "version": "1.0.0",
  "description": "Multi-channel notification service",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev:api": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:worker": "ts-node-dev --respawn --transpile-only src/workers/NotificationWorker.ts",
    "start:api": "node dist/server.ts",
    "start:worker": "node dist/worker.ts",
    "test": "jest",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "notification",
    "queue",
    "microservice"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "bullmq": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "pg": "^8.11.3",
    "twilio": "^5.10.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "jest": "^29.7.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
